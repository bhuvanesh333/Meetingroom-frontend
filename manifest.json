{
  "manifest_version": 3,
  "name": "Meeting Room Booking",
  "description": "Extension for booking meeting rooms",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "background":{
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action":{
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
